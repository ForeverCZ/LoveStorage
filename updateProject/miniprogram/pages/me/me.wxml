<view class='amountBg'>
  <view class='img'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='account'>
    <view class='nick-name'>
      <open-data type="userNickName" lang="zh_CN"></open-data>
    </view>
    <view class='address'>
      <open-data type="userCountry" lang="zh_CN"></open-data>·
      <open-data type="userProvince" lang="zh_CN"></open-data>·
      <open-data type="userCity" lang="zh_CN"></open-data>
    </view>
  </view>
</view>

<!-- 底部列表 -->
<view class='content'>
  <!-- 存储列表 -->
  <view class='line'></view>
  <view class='item' bindtap='onSaveFileClick'>
    <view class='icon'>
      <image src='../../images/file.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>我的存储</view>
    </view>
    <view class='right'>></view>
  </view>

  <!-- 邀请好友 -->
  <view class='line'></view>
  <view class='item'>
    <view class='icon'>
      <image src='../../images/friends.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>邀请好友</view>
    </view>
    <view class='rightShare' bindtap='clickInvitivation'>
      <button open-type="share" hover-class="none" class='opr'>一起来玩~</button>></view>
  </view>
  <view class='hr'></view>

  <!-- 绘制海报 -->
  <view class='item' bindtap='toShareMoments'>
    <view class='icon'>
      <image src='../../images/shareMoments.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>分享给朋友</view>
    </view>
    <view class='right'>></view>
  </view>
</view>