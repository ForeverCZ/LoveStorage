page {
  background: #fff;
}

.conten-wrap {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin: 20rpx auto; */
}

.saveFile {
  margin-top: -150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 520rpx;
  height: 520rpx;
  border-radius: 365rpx;
  background: linear-gradient(to right, #0081ff, #1cbbb4);
  box-shadow: inset 3rpx 3rpx 18rpx 1rpx #fff;
}

.saveFile text {
  font-family:  Arial, Helvetica, sans-serif;
  color: #fff;
  font-size: 55rpx;
  text-shadow: 6px 6px 7px #000;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}

/* 客服组件 */

.kfzj {
  position: fixed;
  bottom: 16%;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.kfzj button {
  background: transparent;
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin: 0;
  padding: 0;
  box-sizing: content-box;
}

.kfzj button::after {
  border: none;
}

.kfzj image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 使用说明 */

.instructions-wap {
  background: rgba(248, 112, 33, 0.8);
  position: fixed;
  z-index: 999;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
}

.instructions-conten {
  top: 150rpx;
  position: relative;
  border-radius: 35rpx;
  width: 700rpx;
  height: 500rpx;
  background: linear-gradient(to right bottom, #f43f3b, #ec008c);
  box-shadow: inset 0 0 20rpx 4rpx #fff;
  /* background: #f43f3b; */
}

.title {
  text-align: center;
}

.title text {
  color: #fff;
  text-align: center;
}

.content-text {
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  color: rgb(245, 231, 231);
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
}

.content {
  padding-top: 15rpx;
}

.instructions-btn {
  width: 100%;
  position: absolute;
  bottom: -300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.instructions-btn button {
  color: #fff;
  width: 40%;
  box-shadow: inset 0 0 10rpx 2rpx #fff;
  background: linear-gradient(to right, #0081ff, #1cbbb4);
  border-radius: 19rpx;
  font-size: 35rpx;
}
