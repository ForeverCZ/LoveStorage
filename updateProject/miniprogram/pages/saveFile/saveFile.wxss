.saveFile-img {
  padding: 20rpx 0 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 730rpx;
  border-radius: 20rpx;
  color: #000;
  border-top: 2px #ec008c solid;
  border-left: 2px #1cbbb4 solid;
  border-right: 2px #6739b6 solid;
  border-bottom: 2px #0081ff solid;
  animation: saveFileAnimition 4s ease infinite;
  margin: 0rpx auto 0rpx auto;
}

@keyframes saveFileAnimition {
  0% {
    border-top: 2px #ec008c solid;
    border-left: 2px #1cbbb4 solid;
    border-right: 2px #6739b6 solid;
    border-bottom: 2px #0081ff solid;
  }

  25% {
    border-top: 2px #0081ff solid;
    border-left: 2px #ec008c solid;
    border-right: 2px #1cbbb4 solid;
    border-bottom: 2px #6739b6 solid;
  }

  50% {
    border-top: 2px #6739b6 solid;
    border-left: 2px #0081ff solid;
    border-right: 2px #ec008c solid;
    border-bottom: 2px #1cbbb4 solid;
  }

  75% {
    border-top: 2px #1cbbb4 solid;
    border-left: 2px #6739b6 solid;
    border-right: 2px #0081ff solid;
    border-bottom: 2px #ec008c solid;
  }

  100% {
    border-top: 2px #ec008c solid;
    border-left: 2px #1cbbb4 solid;
    border-right: 2px #6739b6 solid;
    border-bottom: 2px #0081ff solid;
  }
}

.saveFile-img text {
  font-size: 26rpx;
}

.saveFile-img image {
  width: 170rpx;
  height: 170rpx;
}

/* 选择文件文字 */

.chooseFileText {
  font-size: 28rpx;
  margin-bottom: 70rpx;
}

/* 建议区 */

.Description-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
}

.saveFile-Description {
  font-size: 26rpx;
  font-weight: bold;
}

/* 文件列表 */

.chooseFileList-warp {
  position: absolute;
  width: 730rpx;
  left: 20rpx;
  right: 20rpx;
  top: 450rpx;
}

.chooseFileList-warp .file-title {
  margin-bottom: 15rpx;
  color: #f43f3b;
  display: inline-block;
  width: 100%;
  text-align: center;
}

.chooseFileList-warp .fileList {
  padding: 3rpx 3rpx;
  display: inline-block;
  width: 100%;
  opacity: 0.7;
  font-size: 29rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #ec008c;
}

/* 按钮区 */

.btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 50rpx;
}

.saveFile-btn1 {
  width: 260rpx;
  color: #fff;
  background: linear-gradient(to left, #0081ff, #1cbbb4);
  /* background: linear-gradient(to right, #ff9700,#Ed1c24); */
}

.saveFile-btn2 {
  width: 260rpx;
  color: #fff;
  background: linear-gradient(to right, #0081ff, #1cbbb4);
}

/* 文件格式错误提示框 */

.fileErro {
  z-index: 999;
  position: absolute;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  left: 175rpx;
  right: 175rpx;
  width: 400rpx;
  border-radius: 14rpx;
  top: 40%;
  animation: fileErroAnimition 3.5s ease-in-out 1;
}

@keyframes fileErroAnimition {
  0% {
    opacity: 0;
    background: rgba(46, 45, 45, 0.5);
    color: #fff;
  }

  50% {
    opacity: 1;
    background: rgba(46, 45, 45, 0.4);
    color: #fff;
  }

  100% {
    opacity: 0;
    background: rgba(46, 45, 45, 0.5);
    color: #fff;
  }
}

/* 客服组件 */

.kfzj {
  position: fixed;
  bottom: 20%;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
}

.kfzj button {
  background: transparent;
  width: 90rpx;
  height: 90rpx;
  position: relative;
  margin: 0;
  padding: 0;
  box-sizing: content-box;
}

.kfzj button::after {
  border: none;
}

.kfzj image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 使用说明 */

